---
import { getCollection, render, type CollectionEntry } from 'astro:content';
import Layout from '../../layouts/Layout.astro';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map((post: CollectionEntry<'blog'>) => ({
    params: { slug: post.id },
    props: { post },
  }));
}

interface Props {
  post: CollectionEntry<'blog'>;
}

const { post } = Astro.props;
const { Content } = await render(post);
---

<Layout title={post.data.title}>
  <main>
    <article>
      <header>
        <a href="/" class="back-link">&larr; Back</a>
        <h1>{post.data.title}</h1>
        <p class="meta">
          <time datetime={post.data.pubDate.toISOString()}>
            {post.data.pubDate.toLocaleDateString('en-US', { 
              year: 'numeric', 
              month: 'long', 
              day: 'numeric' 
            })}
          </time>
          {post.data.author && <span class="author"> &middot; {post.data.author}</span>}
        </p>
        {post.data.tags.length > 0 && (
          <div class="tags">
            {post.data.tags.map((tag: string) => (
              <span class="tag">{tag}</span>
            ))}
          </div>
        )}
      </header>
      
      <div class="content">
        <Content />
      </div>
    </article>
  </main>
</Layout>

<style>
  main {
    max-width: 640px;
    margin: 0 auto;
    padding: 3rem 2rem;
  }

  .back-link {
    display: inline-block;
    font-size: 0.875rem;
    margin-bottom: 2rem;
  }

  h1 {
    font-size: 2rem;
    font-weight: 600;
    line-height: 1.3;
    margin-bottom: 0.5rem;
    color: var(--color-dark);
  }

  .meta {
    font-size: 0.875rem;
    color: #888;
    margin-bottom: 1rem;
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-bottom: 2rem;
  }

  .tag {
    font-size: 0.75rem;
    background: #f0f0f0;
    color: #666;
    padding: 0.25rem 0.6rem;
    border-radius: 4px;
  }

  .content {
    line-height: 1.8;
  }

  .content :global(h2) {
    font-size: 1.25rem;
    font-weight: 600;
    margin-top: 2.5rem;
    margin-bottom: 1rem;
    color: var(--color-dark);
  }

  .content :global(h3) {
    font-size: 1.125rem;
    font-weight: 600;
    margin-top: 2rem;
    margin-bottom: 0.75rem;
    color: var(--color-dark);
  }

  .content :global(p) {
    margin-bottom: 1.25rem;
  }

  .content :global(ul),
  .content :global(ol) {
    margin-bottom: 1.25rem;
    padding-left: 1.5rem;
  }

  .content :global(li) {
    margin-bottom: 0.5rem;
  }

  .content :global(strong) {
    font-weight: 600;
  }

  .content :global(code) {
    background: #f5f5f5;
    padding: 0.15rem 0.4rem;
    border-radius: 4px;
    font-size: 0.9em;
    font-family: 'SF Mono', Consolas, monospace;
  }

  .content :global(pre) {
    background: var(--color-dark);
    color: var(--color-white);
    padding: 1.25rem;
    border-radius: 8px;
    overflow-x: auto;
    margin-bottom: 1.25rem;
    font-size: 0.875rem;
  }

  .content :global(pre code) {
    background: none;
    padding: 0;
    color: inherit;
  }

  .content :global(blockquote) {
    border-left: 3px solid var(--color-primary);
    padding-left: 1rem;
    margin: 1.5rem 0;
    color: #666;
    font-style: italic;
  }

  .content :global(hr) {
    border: none;
    border-top: 1px solid #eee;
    margin: 2rem 0;
  }

  .content :global(a) {
    color: var(--color-primary);
    text-decoration: underline;
    text-underline-offset: 2px;
  }

  .content :global(a:hover) {
    color: var(--color-secondary);
  }
</style>
