---
interface Props {
  title?: string;
}

const { title = 'UKI Demo Blog' } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <header>
      <a href="/" class="logo">
        <img src="/cloudflare-logo.svg" alt="Cloudflare" />
      </a>
    </header>
    <slot />
  </body>
</html>

<style is:global>
  :root {
    --color-primary: #f48120;
    --color-secondary: #faad3f;
    --color-dark: #404041;
    --color-white: #ffffff;
  }

  * {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }

  html,
  body {
    width: 100%;
    min-height: 100%;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    background: var(--color-white);
    color: var(--color-dark);
    line-height: 1.6;
  }

  a {
    color: var(--color-primary);
    text-decoration: none;
  }

  a:hover {
    color: var(--color-secondary);
  }
</style>

<style>
  header {
    padding: 1.5rem 2rem;
    border-bottom: 1px solid #eee;
  }

  .logo {
    display: inline-block;
  }

  .logo img {
    width: 25%;
    max-width: 150px;
    min-width: 80px;
    height: auto;
  }
</style>
